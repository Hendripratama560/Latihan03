<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fef5ef"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btArsena"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:text="Arsenal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btPorto"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Porto"
        app:layout_constraintStart_toEndOf="@+id/btArsena"
        app:layout_constraintTop_toTopOf="@+id/btArsena"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        android:id="@+id/btBarcelona"
        android:layout_width="368dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:text="Barcelona"
        app:layout_constraintStart_toStartOf="@+id/btArsena"
        app:layout_constraintTop_toBottomOf="@+id/btArsena"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btColoColo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Colo-Colo"
        app:layout_constraintStart_toStartOf="@+id/btBarcelona"
        app:layout_constraintTop_toBottomOf="@+id/btBarcelona"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btBocaJunior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Boca Junior"
        app:layout_constraintStart_toEndOf="@+id/btColoColo"
        app:layout_constraintTop_toTopOf="@+id/btColoColo"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btFlorentina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Florentina"
        app:layout_constraintStart_toEndOf="@+id/btBocaJunior"
        app:layout_constraintTop_toTopOf="@+id/btBocaJunior"
        tools:ignore="HardcodedText,MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>